{
	"name": "default-website-template",
	"version": "1.0.0",
	"description": "Website template for Payload",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"build": "next build",
		"dev": "next dev --turbo",
		"start": "next start",
		"format": "npx prettier src/ --write",
		"adb": "adb devices && adb reverse tcp:3000 tcp:3000",
		"db:types": "payload generate:types",
		"db:schema": "payload generate:db-schema",
		"db:importmap": "payload generate:importmap",
		"db:create": "dotenv -e .env.production -- payload migrate:create --skip-empty",
		"db:migrate": "dotenv -e .env.production -- payload migrate",
		"lint": "next lint",
		"ci": "db:migrate && npm run build",
		"payload": "payload",
		"setup": "node -e \"process.env.VERCEL_ENV || process.env.CI ? console.log('Skipping setup in CI environment') : require('child_process').execSync('node src/lib/scripts/setup.js', {stdio: 'inherit'})\"",
		"prepare": "husky"
	},
	"dependencies": {
		"@hookform/resolvers": "^5.1.1",
		"@next/third-parties": "^15.3.3",
		"@payloadcms/db-postgres": "^3.42.0",
		"@payloadcms/live-preview-react": "^3.42.0",
		"@payloadcms/next": "^3.42.0",
		"@payloadcms/payload-cloud": "^3.42.0",
		"@payloadcms/plugin-redirects": "^3.42.0",
		"@payloadcms/plugin-seo": "^3.42.0",
		"@payloadcms/richtext-lexical": "^3.42.0",
		"@payloadcms/ui": "^3.42.0",
		"@radix-ui/react-alert-dialog": "^1.1.14",
		"@radix-ui/react-checkbox": "^1.3.2",
		"@radix-ui/react-dialog": "^1.1.14",
		"@radix-ui/react-dropdown-menu": "^2.1.15",
		"@radix-ui/react-label": "^2.1.7",
		"@radix-ui/react-navigation-menu": "^1.2.13",
		"@radix-ui/react-select": "^2.2.5",
		"@radix-ui/react-slot": "^1.2.3",
		"@radix-ui/react-toggle": "^1.1.9",
		"@radix-ui/react-toggle-group": "^1.1.10",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"cross-env": "^7.0.3",
		"dotenv": "^16.5.0",
		"dotenv-cli": "^8.0.0",
		"embla-carousel-react": "^8.6.0",
		"framer-motion": "^12.16.0",
		"geist": "^1.4.2",
		"graphql": "^16.11.0",
		"lucide-react": "^0.514.0",
		"mailersend": "^2.6.0",
		"motion": "^12.16.0",
		"next": "^15.3.3",
		"next-sitemap": "^4.2.3",
		"next-themes": "^0.4.6",
		"npm-check-updates": "^18.0.1",
		"payload": "^3.42.0",
		"prism-react-renderer": "^2.4.1",
		"react": "^19.1.0",
		"react-countdown": "^2.3.6",
		"react-dom": "^19.1.0",
		"react-fast-marquee": "^1.6.5",
		"react-hook-form": "^7.57.0",
		"tailwind-merge": "^3.3.1",
		"tailwindcss-animate": "^1.0.7",
		"zod": "^3.25.57"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.3.1",
		"@tailwindcss/postcss": "^4.1.8",
		"@tailwindcss/typography": "^0.5.16",
		"@types/escape-html": "^1.0.4",
		"@types/node": "24.0.0",
		"@types/react": "19.1.7",
		"@types/react-dom": "19.1.6",
		"copyfiles": "^2.4.1",
		"eslint": "^9.28.0",
		"eslint-config-next": "15.3.3",
		"husky": "^9.1.7",
		"postcss": "^8.5.4",
		"prettier": "^3.5.3",
		"prettier-plugin-tailwindcss": "^0.6.12",
		"tailwindcss": "^4.1.8",
		"tw-animate-css": "^1.3.4",
		"typescript": "5.8.3"
	},
	"engines": {
		"node": "^18.20.2 || >=20.9.0"
	}
}
